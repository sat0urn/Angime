<div class="modal fade p-t-100" id="createForum" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="form m-4 modal-content" action="/forums/createForum" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Forum</h5>
                <div class="form__message form__message--error"></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Author</label>
                    <input name="author" type="text" class="form-control" autofocus placeholder="Author">
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input name="title" type="text" class="form-control" autofocus placeholder="Title">
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="bodyOf" type="text" class="form-control" autofocus
                              placeholder="Body"></textarea>
                    <div class="form__input-error-message"></div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>