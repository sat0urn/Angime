<div class="modal fade p-t-100" id="createBlog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="form m-4 modal-content" action="/blogs/createBlog" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Forum</h5>
                <div class="form__message form__message--error"></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" id="title" type="text" class="form-control" autofocus placeholder="Title"
                           required>
                    <div class="form__input-error-message"></div>
                </div>
                <div class="form-group">
                    <label for="body">Body</label>
                    <input name="body" id="body" type="text" class="form-control" autofocus placeholder="Body" required>
                    <div class="form__input-error-message"></div>
                </div>
                <form class="form-group" enctype="multipart/form-data">
                    <label for="image">Image</label>
                    <input name="image" id="image" type="file" class="form-control">
                    <div class="form__input-error-message"></div>
                </form>
                <button type="submit" class="btn btn-primary mt-3">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
