<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true" style="padding-top: 100px">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form">
                <div class="form__input-group p-3">
                    <label for="email">Your email</label>
                    <input name="email" id="email" type="email" class="form-control" autofocus
                           placeholder="<%= mydata.email %>" disabled>
                    <div class="form__input-error-message"></div>
                </div>
            </form>
            <form class="form" action="/users/update/<%= mydata.email %>?_method=PATCH" method="post">
                <div class="modal-body">
                    <h1 class="form__title">Edit account</h1>
                    <div class="form__message form__message--error"></div>
                    <div class="form__input-group pb-2">
                        <input name="newName" type="text" class="form-control" autofocus
                               placeholder="Name">
                        <div class="form__input-error-message"></div>
                    </div>
                    <div class="form__input-group pb-2">
                        <input name="newSurname" type="text" class="form-control" autofocus placeholder="Surname">
                        <div class="form__input-error-message"></div>
                    </div>
                    <div class="form__input-group pb-2">
                        <input name="newCity" type="text" class="form-control" autofocus placeholder="City">
                        <div class="form__input-error-message"></div>
                    </div>
                    <div class="form__input-group pb-2">
                        <input name="newPhone" type="number" class="form-control" autofocus placeholder="Phone">
                        <div class="form__input-error-message"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>