<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="img/icon.png"/>
    <link rel="stylesheet" href="css/forums.css">
    <link rel="stylesheet" href="css/another.css">
    <link rel="stylesheet" href="css/util.css">
    <link rel="stylesheet" href="css/users.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css"
          integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/28517675c6.js" crossorigin="anonymous"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <meta charset="UTF-8">
    <title>Users</title>
</head>
<body>

<%- include("partials/header.ejs") -%>

<main>
    <div class="container">
        <h1 style="text-align: center;">Our users</h1>
        <hr class="my-4">
        <div>
            <label for="data" class="form-label">Result of your query: </label>
            <% if(Array.isArray(mydata)){ %>
                <table class="table" style="margin: 0 auto">
                    <thead class="thead-dark">
                    <tr>
                        <td scope="col">#</td>
                        <td scope="col">First Name</td>
                        <td scope="col">Last Name</td>
                        <td scope="col">Email</td>
                        <td scope="col">Phone</td>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(let a = 0;a < mydata.length;a++){ %>
                        <tr>
                            <th scope="row"><%= a + 1 %></th>
                            <td><%= mydata[a].username %></td>
                            <td><%= mydata[a].surname %></td>
                            <td><%= mydata[a].email %></td>
                            <td><%= mydata[a].phone %></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            <% }else{ %>
                <label for="data" class="form-label">
                    <%= mydata %>
                </label>
            <% } %>
        </div>
    </div>
</main>
</body>

<%- include('partials/navOpenAnimation.ejs') -%>

</html>