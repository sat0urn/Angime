<%- include("partials/header.ejs") -%>

<div class="container p-t-25 p-b-50">
    <div class="row">

        <!-- Single News Area -->

        <% blogsData.forEach(blog => { %>
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-blog-post style-2 mb-5">

                    <!-- Blog Thumbnail -->
                    <div class="blog-thumbnail border border-dark" style="height: 239px;">
                        <a href="#">
                            <img style="height: 237px;" src="<%= blog.coverImagePath %>" alt="">
                        </a>
                    </div>

                    <!-- Blog Content -->
                    <div class="blog-content">
                        <span class="post-date d-block mb-0">June 20, 2018</span>
                        <a href="#" class="post-title"><%= blog.title %></a>
                    </div>
                </div>
            </div>
        <% }) %>

